.partner
	display block
	text-align center

	&__avatar
		width em(120)
		height em(120)
		margin-x auto
		position relative
		margin-bottom em(18)

	&__image
		width 100%
		height auto
		border-radius 50%

	&__icon-bg
		position absolute
		display inline-block
		width em(40)
		height em(40)
		border em(4) solid #fff
		background-color $ui-base-color
		border-radius 50%
		right em(-5)
		bottom em(-4)

		&_cup
			background-color #1cd7ad

		&_flask
			background-color #ffa507

		&_airplane
			background-color #4e73db

	&__icon
		position absolute
		left 50%
		top 50%
		transform translate(-50%, -50%)
		fill #fff

		&_tv
			size(em(16))

		&_cup
			size(em(16), em(15))

		&_flask
			size(em(11), em(16))

		&_airplane
			size(em(16), em(15))

	&__name
		display block
		color #333
		font-family $Montserrat
		font-size 14px
		font-weight 700
		margin-bottom 17px

	&__quote
		color #666
		font-family $Roboto
		font-size 14px
		font-weight 300
		line-height (16/14)


